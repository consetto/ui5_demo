<mvc:View
	controllerName="sap.ui.demo.toolpageapp.controller.Home"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false">
		<landmarkInfo>
			<PageAccessibleLandmarkInfo
				rootRole="Region"
				rootLabel="{i18n>Home_rootLabel}"
				contentRole="Main"
				contentLabel="{i18n>Home_contentLabel}"/>
		</landmarkInfo>
		<l:BlockLayout
			id="BlockLayout"
			background="Default">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell class="sapUiNoContentPadding">
					<Image
						src="{
							path: 'view>/isPhone',
							formatter: '.formatter.srcImageValue'
						}"
						width="100%"
						height="100%"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell 
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeD" >
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://role"
							size="2.5rem"
							color="Default"/>
						<Title
							id="ProcessFlowTitle"
							text="{i18n>ProcessFlowTitle}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>ProcessFlowContent}"
							class="sapUiTinyMarginBottom"/>
						<Link
							text="{i18n>accessLink}" 
								press="handleLinkPressprocessFlow3"
							tooltip="{i18n>accessAdministrationLink}"/>
					
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon 
							src="sap-icon://add-product"
							size="2.5rem"
							color="Default"/>
						<Title
							id="productionTitle"
							text="{i18n>productionTitle}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>productionContent}"
							class="sapUiTinyMarginBottom"/>
						<Link
							text="{i18n>accessLink}"
							press="handleLinkPressprocessFlow"
							tooltip="{i18n>accessProductsLink}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeD">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://customer-financial-fact-sheet"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>PredictiveForecastTitle}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>PredictiveForecastContent}"
							class="sapUiTinyMarginBottom"/>
						<Link
							text="{i18n>accessLink}"
							press="handleLinkPressPredictiveForecast"
							tooltip="{i18n>accessRevenueLink}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://supplier"
							size="2.5rem"
							color="Default"/> 
						<Title
							text="{i18n>LogisticsTitle}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>LogisticsContent}"
							class="sapUiTinyMarginBottom"/>
						<Link
							text="{i18n>accessLink}"
							press="handleLinkPressDeliveryRoute"
							tooltip="{i18n>accessSuppliersLink}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://expense-report"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>FinancialDashboardTitle}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>FinancialDashboardContent}"
							class="sapUiTinyMarginBottom"/>
					<!--	<Link
							text="{i18n>accessLink}"
							press="handleLinkPressFinancialDashboard"
							tooltip="{i18n>accessSocialLink}"/>-->
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet9"
					backgroundColorShade="ShadeA"
					width="3">
					<Table
						items="{path:'project>/Projects', templateShareable: false}"
						fixedLayout="false">
						<headerToolbar>
							<Toolbar design="Transparent">
								<Title
									text="{i18n>ProjectOverviewTitle}"
									level="H3"/>
							</Toolbar>
						</headerToolbar>
							<columns>
								<Column>
									<Text text="{i18n>TeamMemberName}"/>
								</Column>
								<Column minScreenWidth="Tablet">
									<Text text="{i18n>Task}"/>
								</Column>
								<Column hAlign="Center">
									<Text text="{i18n>status}"/>
								</Column>
								<Column hAlign="End">
									<Text text="{i18n> Deadline}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{project>name}"/>
										<Text text="{project>Task}"/>
										<ObjectNumber
											number="{project>Status }"
											state="{project>state}"/>
										<Text text="{project>Deadline}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>